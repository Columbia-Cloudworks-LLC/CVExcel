{
  "version": "1.0.0",
  "name": "CVExcel Core Engine",
  "description": "Modular vulnerability scanner core engine for Windows Server infrastructure",

  "database": {
    "type": "SQLite",
    "connectionString": "Data Source=core-engine/data/vulnscan.db;Version=3;",
    "schemaVersion": "1.0",
    "backupEnabled": true,
    "backupRetentionDays": 30
  },

  "modules": {
    "feeds": [
      "Feed_Microsoft",
      "Feed_GitHub",
      "Feed_IBM",
      "Feed_ZDI",
      "Feed_Generic"
    ],
    "inventory": [
      "Inventory_Windows",
      "Inventory_AD"
    ],
    "scanners": [
      "Scanner_Network",
      "Scanner_Windows_Patches",
      "Scanner_Windows_Config"
    ],
    "assessments": [
      "RiskScorer"
    ],
    "output": [
      "Output_DB",
      "Output_API",
      "Output_Report"
    ]
  },

  "scanning": {
    "defaultTimeout": 300,
    "maxConcurrentScans": 10,
    "retryAttempts": 3,
    "retryDelaySeconds": 5,
    "rateLimitRequestsPerMinute": 60
  },

  "riskScoring": {
    "enabled": true,
    "algorithm": "weighted",
    "weights": {
      "exploitability": 0.4,
      "exposure": 0.3,
      "assetCriticality": 0.2,
      "patchAvailability": 0.1
    },
    "thresholds": {
      "critical": 9.0,
      "high": 7.0,
      "medium": 4.0,
      "low": 1.0
    }
  },

  "api": {
    "enabled": true,
    "port": 8080,
    "authentication": {
      "enabled": true,
      "type": "bearer",
      "tokenExpiryHours": 24
    },
    "cors": {
      "enabled": true,
      "allowedOrigins": ["*"]
    }
  },

  "logging": {
    "level": "INFO",
    "file": "core-engine/logs/vulnscan.log",
    "maxFileSizeMB": 100,
    "maxFiles": 10,
    "console": true,
    "structured": true
  },

  "security": {
    "encryption": {
      "enabled": true,
      "algorithm": "AES-256",
      "keyDerivation": "PBKDF2"
    },
    "inputValidation": {
      "enabled": true,
      "maxInputLength": 10000,
      "sanitizeHtml": true
    },
    "rateLimiting": {
      "enabled": true,
      "requestsPerMinute": 100,
      "burstLimit": 20
    }
  },

  "ui": {
    "enabled": true,
    "theme": "dark",
    "autoRefresh": true,
    "refreshIntervalSeconds": 30
  },

  "development": {
    "debugMode": false,
    "verboseLogging": false,
    "mockData": false,
    "testMode": false
  }
}
